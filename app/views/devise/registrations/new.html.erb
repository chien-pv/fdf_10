<% provide :title, t("static_page.signup") %>
<div class="row" id="signup">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h1 class="text-center panel-title"><%= t "static_page.signup" %></h1>
      </div>
      <div class="panel-body">
        <%= simple_form_for(resource, as: resource_name,
          url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs">
            <%= f.input :name, :label => :name,
              required: true, autofocus: true  %>
            <%= f.input :email, required: true %>
            <%= f.input :password, required: true,
              hint: ("#{@minimum_password_length}
              characters minimum" if @minimum_password_length) %>
            <%= f.input :password_confirmation, required: true %>
            <%= f.label :phone %>
            <%= f.text_field :phone, class: "form-control" %>
            <%= f.label :gender %>
            <%= f.select :gender,[[t("user.gender.female"), true],
              [t("user.gender.male"), false]],
              prompt: t("user.gender.select"), required: true,
              placeholder: t("user.gender_holder"),
              class: "form-control" %>
            <%= f.input :avatar, class: "form-control" %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Sign up" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
     </div>
    </div>
  </div>
</div>


<div class="panel panel-default">
  <div class="panel-heading"><%= t ".title" %></div>
  <div class="panel-body">
    <div class="list-group">
      <%= search_form_for @q, url: root_path do |f| %>
        <div class="input-group">
          <div class="categories-select">
            <%= f.label :categories %>
            <div class="pull-right">
              <%= f.select :category_id_eq,
                options_from_collection_for_select(@categories, :id, :name),
                class: "form-control", include_blank: true %>
            </div>
          </div>
          <%= f.search_field :name_cont_any,
            class: "form-control", placeholder: t(".name") %>
          <%= f.search_field :price_eq, class: "form-control",
            placeholder: t(".price") %>
          <%= f.submit  class: "btn btn-danger pull-right" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

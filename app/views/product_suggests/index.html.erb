<div class="content-page-admin">
  <h2 class="text-center"><%= t "product_suggests.new.title" %></h2>
  <div class="flash-massage"></div>
  <div class="mg-bt-10 pull-left">
    <%= link_to  t("product_suggests.new.suggest"), new_product_suggest_path,
      class: "btn btn btn-success" %>
  </div>
  <table class="table table-bordered" id="table-product">
    <thead>
      <tr>
        <th class="text-center"><%= t ".number_order" %></th>
        <th class="text-center"><%= t ".category" %></th>
        <th class="text-center"><%= t ".name" %></th>
        <th class="text-center"><%= t ".description" %></th>
        <th class="text-center"><%= t ".created_at" %></th>
        <th class="text-center"><%= t ".image" %></th>
        <th class="text-center"><%= t ".status" %></th>
        <th class="text-center"><%= t ".action" %></th>
      </tr>
    </thead>
    <tbody>
      <% @product_suggests.each_with_index do |product_suggest, index| %>
        <tr>
          <td>
            <%= number_order params[:page] , index %>
          </td>
          <td><%= product_suggest.category.try :name %></td>
          <td><%= product_suggest.product_name %></td>
          <td><%= product_suggest.description %></td>
          <td><%= l product_suggest.created_at, format: :short_date %></td>
          <td><%= image_tag product_suggest.image.thumb.url %></td>
          <td class="text-center"><%= product_suggest.status %></td>
          <td class="text-center">
          <button class="btn btn-danger btn-user-delete-product-suggest"
            data-value="<%= product_suggest.id %>">
            <%= t ".delete" %></button>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @product_suggests, theme: "twitter-bootstrap-3" %>
</div>

<div class="container detail-product">
  <div class="row">
    <div class="col-md-5">
      <span class="image-product">
        <%= image_tag @product_suggest.image.url %>
      </span>
    </div>
    <div class="col-md-7">
      <div class="row">
        <div class="col-md-3 text-primary"><%= t ".product" %></div>
        <div class="col-md-8">
          <h4><%= @product_suggest.product_name %></h4>
        </div>
      </div>
      <div class="row">
        <div class="text-primary">
          <h4><%= t "product.description" %></h4>
        </div>
        <p><%= @product_suggest.description %></p>
      </div>
    </div>
  </div>
  <%= link_to t(".back"), product_suggests_path,
    class: "btn btn-primary pull-right" %>
</div>

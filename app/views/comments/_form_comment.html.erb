<% if user_signed_in? %>
  <%= form_for @comment, html: {multipart: true} do |f| %>
    <div class="col-md-12">
      <div class="row">
        <%= f.text_area :content, placeholder: t("comment.placeholder") %>
        <%= f.hidden_field :user_id, value: current_user.id %>
        <%= f.hidden_field :product_id, value: object.id %>
      </div>
      <div class="row">
        <%= f.submit t("comment.btn_post"),
          class: "btn btn-success green btn-post-comment" %>
      </div>
    </div>
  <% end %>
<% end %>

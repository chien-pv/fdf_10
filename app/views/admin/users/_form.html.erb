<div class="panel-body">
  <%= simple_form_for [:admin, @user], html: {multipart: true} do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :name, label: :name,
        required: true, autofocus: true  %>
      <%= f.input :email, required: true %>
      <%= f.input :password, required: true,
        hint: ("#{@minimum_password_length}
        characters minimum" if @minimum_password_length) %>
      <%= f.input :password_confirmation, required: true %>
      <%= f.label :phone %>
      <%= f.text_field :phone, class: "form-control" %>
      <%= f.label :gender %>
      <%= f.select :gender,[[t("user.gender.female"), true],
        [t("user.gender.male"), false]],
        prompt: t("user.gender.select"), required: true,
        placeholder: t("user.gender_holder"),
        class: "form-control" %>
      <%= f.input :avatar, class: "form-control" %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, t("admin.users.btn_submit"),
        class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
